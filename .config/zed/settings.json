{
    "theme": "Catppuccin Macchiato",
    "ui_font_size": 14,
    "buffer_font_size": 12,
    "project_panel": { "dock": "right" },
    "ui_font_family": "Zed Plex Mono",
    "restore_on_startup": "none",
    "base_keymap": "VSCode",
    "vim_mode": false,
    "relative_line_numbers": false,
    "cursor_blink": false,

    "preview_tabs": {
        "enabled": false,
        "enable_preview_from_file_finder": false
    },

    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },

    "tabs": { "file_icons": true },

    "autosave": "off",
    "format_on_save": "on",
    "formatter": "auto",

    "tab_size": 4,
    "preferred_line_length": 88,
    "soft_wrap": "editor_width",
    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "coloring": "fixed",
        "background_coloring": "disabled"
    },

    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-latest"
        },
        "version": "2"
    },

    "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true
    },

    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "enabled": false
        }
    },

    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "checkOnSave": {
                    "command": "clippy"
                },
                "inlayHints": {
                    "maxLength": null,
                    "lifetimeElisionHints": {
                        "enable": "skip_trivial",
                        "useParameterNames": true
                    },
                    "closureReturnTypeHints": {
                        "enable": "always"
                    }
                }
            }
        },
        "basedpyright": {
            "python": {
                "pythonPath": ".venv/bin/python",
                "venvPath": "."
            },
            "basedpyright": {
                "analysis": {
                    "typeCheckingMode": "basic"
                }
            }
        },
        "ruff": {
            "initialization_options": {
                "settings": {
                    "lineLength": 88,
                    "showSyntaxErrors": true,
                    "lint": {
                        "select": ["ALL"],
                        "ignore": ["D", "S101", "E501", "PTH123", "TD003"]
                    }
                }
            }
        },
        "nextflow-language-server": {
            "command": "nextflow-language-server",
            "config": {
                "nextflow": {
                    "debug": true,
                    "formatting": {
                        "harshilAlignment": true
                    }
                }
            }
        }
    },

    "languages": {
        "Rust": {
            "preferred_line_length": 100,
            "show_wrap_guides": true,
            "soft_wrap": "bounded"
        },
        "Ocaml": {
            "tab_size": 2,
            "formatter": {
                "external": {
                    "command": "ocamlformat",
                    "arguments": ["-", "--impl"]
                }
            }
        },
        "Gleam": {
            "tab_size": 2,
            "language_servers": ["gleam"]
        },
        "Nextflow": {
            "tab_size": 4,
            "preferred_line_length": 100,
            "format_on_save": "on",
            "language_servers": ["nextflow-language-server"]
        },
        "Python": {
            "language_servers": ["ruff", "basedpyright"],
            "formatter": [
                {
                    "code_actions": {
                        "source.organizeImports.ruff": true,
                        "source.fixAll.ruff": true
                    }
                },
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ]
        },
        "Nix": {
            "tab_size": 2
        },
        "Markdown": {
            "soft_wrap": "editor_width"
        },
        "Plain Text": {
            "soft_wrap": "none"
        },
        "CSV": {
            "soft_wrap": "none"
        },
        "TSV": {
            "soft_wrap": "none"
        },
        "Rainbow CSV": {
            "soft_wrap": "none"
        },
        "Rainbow TSV": {
            "soft_wrap": "none"
        }
    },

    "file_types": {
        "Rust": ["rs", "ers"],
        "Nextflow": ["nf", "nextflow", "nextflow.config"],
        "Dockerfile": ["Dockerfile*"],
        "YAML": ["pixi.lock"],
        "Markdown": ["md", "qmd"],
        "Shell Script": ["sub"]
    },

    "detect_venv": {
        "on": {
            "directories": [".env", "env", ".venv", "venv", "devenv"],
            "activate_script": "default"
        }
    }
}
